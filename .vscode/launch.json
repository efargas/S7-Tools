    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: S7Tools Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/S7Tools/S7Tools.csproj",
            "program": "dotnet",
            "args": [
              "run",
              "--project",
              "${workspaceFolder}/src/S7Tools/S7Tools.csproj"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Meteor Debugger",
            "type": "dotnet-meteor.debugger",
            "request": "launch",
            "preLaunchTask": "dotnet-meteor: Build",
            "program": "${workspaceFolder}/src/S7Tools/bin/Debug/net8.0/S7Tools.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/src/S7Tools/bin/Debug/net8.0/S7Tools.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ]
}
