<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:S7Tools.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="using:Avalonia.Xaml.Interactivity"
        xmlns:views="clr-namespace:S7Tools.Views"
        xmlns:local="clr-namespace:S7Tools"
        xmlns:icons="using:Projektanker.Icons.Avalonia"
        xmlns:converters="clr-namespace:S7Tools.Converters"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="S7Tools.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="S7Tools"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <converters:BooleanToInverseBooleanConverter x:Key="BooleanToInverseBooleanConverter" />
        <converters:GridLengthToDoubleConverter x:Key="GridLengthToDoubleConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter" />

        <!-- DataTemplate for SettingsViewModel in sidebar (categories only) -->
        <DataTemplate x:Key="SettingsSidebarTemplate" DataType="vm:SettingsViewModel">
            <views:SettingsCategoriesView />
        </DataTemplate>

        <!-- DataTemplate for SettingsViewModel in main content (content only) -->
        <DataTemplate x:Key="SettingsMainContentTemplate" DataType="vm:SettingsViewModel">
            <views:SettingsView />
        </DataTemplate>
    </Window.Resources>

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+B" Command="{Binding Navigation.ToggleSidebarCommand}" />
        <KeyBinding Gesture="Ctrl+J" Command="{Binding BottomPanel.TogglePanelCommand}" />
        <KeyBinding Gesture="Ctrl+X" Command="{Binding CutCommand}" />
        <KeyBinding Gesture="Ctrl+C" Command="{Binding CopyCommand}" />
        <KeyBinding Gesture="Ctrl+V" Command="{Binding PasteCommand}" />
        <KeyBinding Gesture="Alt+F4" Command="{Binding ExitCommand}" />
        <!-- Activity Bar Navigation -->
        <KeyBinding Gesture="Ctrl+Shift+E" Command="{Binding Navigation.NavigateToActivityBarItemCommand}" CommandParameter="explorer" />
        <KeyBinding Gesture="Ctrl+Shift+F" Command="{Binding Navigation.NavigateToActivityBarItemCommand}" CommandParameter="connections" />
        <KeyBinding Gesture="Ctrl+Shift+L" Command="{Binding Navigation.NavigateToActivityBarItemCommand}" CommandParameter="logviewer" />
        <KeyBinding Gesture="Ctrl+OemComma" Command="{Binding Navigation.NavigateToActivityBarItemCommand}" CommandParameter="settings" />
    </Window.KeyBindings>

    <!-- VSCode-style layout structure -->
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#2D2D30" Foreground="#CCCCCC" Height="40" FontSize="14">
            <MenuItem Header="_File" Foreground="#CCCCCC">
                <MenuItem Header="_New File" InputGesture="Ctrl+N" />
                <MenuItem Header="_Load Configuration..." InputGesture="Ctrl+O" Command="{Binding LoadConfigurationCommand}" />
                <MenuItem Header="_Save Configuration" InputGesture="Ctrl+S" Command="{Binding SaveConfigurationCommand}" />
                <MenuItem Header="_Save As..." InputGesture="Ctrl+Shift+S" />
                <Separator />
                <MenuItem Header="_Exit" Command="{Binding ExitCommand}" InputGesture="Alt+F4" />
            </MenuItem>
            <MenuItem Header="_Edit" Foreground="#CCCCCC" StaysOpenOnClick="True">
                <MenuItem Header="_Undo" InputGesture="Ctrl+Z" />
                <MenuItem Header="_Redo" InputGesture="Ctrl+Y" />
                <Separator />
                <MenuItem Header="_Cut" Command="{Binding CutCommand}" InputGesture="Ctrl+X" StaysOpenOnClick="False" />
                <MenuItem Header="_Copy" Command="{Binding CopyCommand}" InputGesture="Ctrl+C" StaysOpenOnClick="False" />
                <MenuItem Header="_Paste" Command="{Binding PasteCommand}" InputGesture="Ctrl+V" StaysOpenOnClick="False" />
                <Separator />
                <MenuItem Header="_Find" InputGesture="Ctrl+F" />
                <MenuItem Header="_Replace" InputGesture="Ctrl+H" />
            </MenuItem>
            <MenuItem Header="_View" Foreground="#CCCCCC">
                <MenuItem Header="_Command Palette..." InputGesture="Ctrl+Shift+P" />
                <MenuItem Header="_Explorer" InputGesture="Ctrl+Shift+E" />
                <MenuItem Header="_Search" InputGesture="Ctrl+Shift+F" />
                <Separator />
                <MenuItem Header="Toggle _Sidebar" Command="{Binding Navigation.ToggleSidebarCommand}" InputGesture="Ctrl+B" />
                <MenuItem Header="Toggle _Bottom Panel" Command="{Binding BottomPanel.TogglePanelCommand}" InputGesture="Ctrl+J" />
            </MenuItem>
            <MenuItem Header="_Help" Foreground="#CCCCCC">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>

        <!-- Status Bar anchored to window bottom -->
        <Border DockPanel.Dock="Bottom" Background="#007ACC" Height="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0" Spacing="8">
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" VerticalAlignment="Center" FontSize="12" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0" Spacing="8"
                            IsVisible="{Binding Navigation.ShowLogStats}">
                    <TextBlock Text="|" Foreground="White" VerticalAlignment="Center" FontSize="12" />
                    <TextBlock Text="{Binding Navigation.LogStatsMessage}" Foreground="White" VerticalAlignment="Center" FontSize="12" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0" Spacing="8"
                            IsVisible="{Binding LastButtonPressed, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="|" Foreground="White" VerticalAlignment="Center" FontSize="12" />
                    <TextBlock Text="{Binding LastButtonPressed}" Foreground="White" VerticalAlignment="Center" FontSize="12" />
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="8,0">
                    <TextBlock Text="S7Tools" Foreground="White" VerticalAlignment="Center" FontSize="12" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area with Bottom Panel -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="100" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="{Binding BottomPanel.PanelHeight, Mode=TwoWay}"
                               MinHeight="35"
                               MaxHeight="{Binding $parent[Window].Bounds.Height, Converter={StaticResource GridLengthToDoubleConverter}, ConverterParameter=0.75}" />
            </Grid.RowDefinitions>

            <!-- Main Content Area -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <!-- Activity Bar -->
                    <ColumnDefinition Width="48" />
                    <!-- Sidebar - Width changes based on visibility -->
                    <ColumnDefinition Width="{Binding Navigation.IsSidebarVisible, Converter={x:Static converters:ObjectConverters.SidebarWidthConverter}}" />
                    <!-- Sidebar Splitter -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Main Content -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Activity Bar -->
                <Border Grid.Column="0" Background="#333333" BorderBrush="#464647" BorderThickness="0,0,1,0">
                    <ItemsControl ItemsSource="{Binding Navigation.ActivityBarItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="48" Height="48">
                                    <!-- Selection indicator (left border) -->
                                    <Border Width="2"
                                            Height="48"
                                            Background="#007ACC"
                                            HorizontalAlignment="Left"
                                            IsVisible="{Binding IsSelected}" />

                                    <!-- Button -->
                                    <Button Width="48"
                                            Height="48"
                                            Padding="0"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            Command="{Binding $parent[Window].DataContext.Navigation.SelectActivityBarItemCommand}"
                                            CommandParameter="{Binding Id}"
                                            ToolTip.Tip="{Binding Tooltip}"
                                            Name="ActivityBarButton">
                                        <Button.Styles>
                                            <Style Selector="Button">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                            <Style Selector="Button:pressed">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                            <!-- Icon hover effect via Button hover -->
                                            <Style Selector="Button:pointerover > icons|Icon">
                                                <Setter Property="Foreground" Value="#FFFFFF" />
                                            </Style>
                                        </Button.Styles>
                                        <icons:Icon Width="40"
                                                   Height="40"
                                                   Value="{Binding IconPath}"
                                                   Foreground="{Binding IsSelected, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='#FFFFFF|#858585'}" />
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Sidebar -->
                <Border Grid.Column="1"
                        Background="#252526"
                        BorderBrush="#464647"
                        BorderThickness="0,0,1,0"
                        IsVisible="{Binding Navigation.IsSidebarVisible}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Sidebar Header - Darker background for better hierarchy -->
                        <Border Grid.Row="0"
                                Background="#1E1E1E"
                                Height="35"
                                BorderBrush="#464647"
                                BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                          Text="{Binding Navigation.SidebarTitle}"
                                          Foreground="#CCCCCC"
                                          FontSize="11"
                                          FontWeight="Bold"
                                          VerticalAlignment="Center"
                                          Margin="12,0" />

                                <Button Grid.Column="1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Width="24"
                                        Height="24"
                                        Margin="4"
                                        Command="{Binding Navigation.ToggleSidebarCommand}"
                                        ToolTip.Tip="Collapse Sidebar">
                                    <icons:Icon Value="fa-solid fa-times"
                                               Width="12"
                                               Height="12"
                                               Foreground="#CCCCCC" />
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Sidebar Content -->
                        <ContentControl Grid.Row="1" Content="{Binding Navigation.CurrentContent}">
                            <ContentControl.DataTemplates>
                                <DataTemplate DataType="vm:SettingsViewModel">
                                    <views:SettingsCategoriesView />
                                </DataTemplate>
                            </ContentControl.DataTemplates>
                        </ContentControl>
                    </Grid>
                </Border>

                <!-- Sidebar GridSplitter -->
                <GridSplitter Grid.Column="2"
                              Width="1"
                              VerticalAlignment="Stretch"
                              ResizeDirection="Columns"
                              IsVisible="{Binding Navigation.IsSidebarVisible}"
                              Cursor="SizeWestEast"
                              ShowsPreview="False" />

                <!-- Main Editor Area -->
                <Border Grid.Column="3" Background="#1E1E1E">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Main Content Header (Optional) -->
                        <Border Grid.Row="0"
                                Background="#2D2D30"
                                Height="35"
                                BorderBrush="#464647"
                                BorderThickness="0,0,0,1"
                                IsVisible="{Binding Navigation.ShowMainContentHeader}">
                            <TextBlock Text="{Binding Navigation.MainContentTitle}"
                                      Foreground="#CCCCCC"
                                      FontSize="11"
                                      FontWeight="Bold"
                                      VerticalAlignment="Center"
                                      Margin="12,0" />
                        </Border>

                        <!-- Main Content Container using ViewLocator -->
                        <ContentControl Grid.Row="1"
                                       Content="{Binding Navigation.MainContent}"
                                       Background="#1E1E1E" />
                    </Grid>
                </Border>
            </Grid>

            <!-- GridSplitter for Bottom Panel -->
            <GridSplitter Grid.Row="1"
                          Height="1"
                          HorizontalAlignment="Stretch"
                          ResizeDirection="Rows"
                          IsVisible="{Binding BottomPanel.IsExpanded}"
                          Cursor="SizeNorthSouth"
                          ShowsPreview="False" />

            <!-- Bottom Panel -->
            <Grid Grid.Row="2"
                  Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Bottom Panel Header (Always Visible) -->
                <Border Grid.Row="0"
                        Background="#2D2D30"
                        Height="35"
                        BorderBrush="#464647"
                        BorderThickness="0,1,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!-- Bottom Panel Items (Activity Bar Style) -->
                        <ItemsControl Grid.Column="0" ItemsSource="{Binding BottomPanel.Tabs}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="35">
                                        <!-- Selection indicator (bottom border) -->
                                        <Border Height="2"
                                                Background="#007ACC"
                                                VerticalAlignment="Bottom"
                                                IsVisible="{Binding IsSelected}" />

                                        <!-- Button -->
                                        <Button Background="Transparent"
                                                BorderThickness="0"
                                                Padding="12,8,12,8"
                                                Command="{Binding $parent[Window].DataContext.BottomPanel.SelectTabCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="{Binding Header}">
                                            <Button.Styles>
                                                <Style Selector="Button">
                                                    <Setter Property="Background" Value="Transparent" />
                                                </Style>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Background" Value="Transparent" />
                                                </Style>
                                                <Style Selector="Button:pressed">
                                                    <Setter Property="Background" Value="Transparent" />
                                                </Style>
                                                <!-- TextBlock hover effect via Button hover -->
                                                <Style Selector="Button:pointerover > TextBlock">
                                                    <Setter Property="Foreground" Value="#FFFFFF" />
                                                </Style>
                                            </Button.Styles>
                                            <TextBlock Text="{Binding Header}"
                                                      FontSize="11"
                                                      Foreground="{Binding IsSelected, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='#FFFFFF|#858585'}" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Collapse/Expand Button (Right Side) -->
                        <Button Grid.Column="1"
                                Command="{Binding BottomPanel.TogglePanelCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Height="35"
                                Width="35"
                                Padding="0">
                            <icons:Icon Value="fa-solid fa-chevron-down"
                                       Width="12"
                                       Height="12"
                                       Foreground="#CCCCCC"
                                       VerticalAlignment="Center" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Bottom Panel Content -->
                <Border Grid.Row="1"
                        Background="#1E1E1E"
                        IsVisible="{Binding BottomPanel.IsExpanded}">
                    <ScrollViewer>
                        <ContentControl Content="{Binding BottomPanel.SelectedTab.Content}" />
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
