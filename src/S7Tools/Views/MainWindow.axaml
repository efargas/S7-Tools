<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:S7Tools.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="using:Avalonia.Xaml.Interactivity"
        xmlns:views="clr-namespace:S7Tools.Views"
        xmlns:local="clr-namespace:S7Tools"
        xmlns:icons="using:Projektanker.Icons.Avalonia"
        xmlns:converters="clr-namespace:S7Tools.Converters"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="S7Tools.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="S7Tools"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <converters:BooleanToInverseBooleanConverter x:Key="BooleanToInverseBooleanConverter" />
        <converters:GridLengthToIconConverter x:Key="GridLengthToIconConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter" />
    </Window.Resources>

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+B" Command="{Binding ToggleSidebarCommand}" />
        <KeyBinding Gesture="Ctrl+J" Command="{Binding ToggleBottomPanelCommand}" />
        <KeyBinding Gesture="Ctrl+X" Command="{Binding CutCommand}" />
        <KeyBinding Gesture="Ctrl+C" Command="{Binding CopyCommand}" />
        <KeyBinding Gesture="Ctrl+V" Command="{Binding PasteCommand}" />
        <KeyBinding Gesture="Alt+F4" Command="{Binding ExitCommand}" />
        <!-- Activity Bar Navigation -->
        <KeyBinding Gesture="Ctrl+Shift+E" Command="{Binding NavigateToActivityBarItemCommand}" CommandParameter="explorer" />
        <KeyBinding Gesture="Ctrl+Shift+F" Command="{Binding NavigateToActivityBarItemCommand}" CommandParameter="connections" />
        <KeyBinding Gesture="Ctrl+Shift+L" Command="{Binding NavigateToActivityBarItemCommand}" CommandParameter="logviewer" />
        <KeyBinding Gesture="Ctrl+OemComma" Command="{Binding NavigateToActivityBarItemCommand}" CommandParameter="settings" />
    </Window.KeyBindings>

    <!-- VSCode-style layout structure -->
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#2D2D30" Foreground="#CCCCCC" Height="40" FontSize="14">
            <MenuItem Header="_File" Foreground="#CCCCCC">
                <MenuItem Header="_New File" InputGesture="Ctrl+N" />
                <MenuItem Header="_Open File..." InputGesture="Ctrl+O" />
                <MenuItem Header="_Save" InputGesture="Ctrl+S" />
                <MenuItem Header="_Save As..." InputGesture="Ctrl+Shift+S" />
                <Separator />
                <MenuItem Header="_Exit" Command="{Binding ExitCommand}" InputGesture="Alt+F4" />
            </MenuItem>
            <MenuItem Header="_Edit" Foreground="#CCCCCC">
                <MenuItem Header="_Undo" InputGesture="Ctrl+Z" />
                <MenuItem Header="_Redo" InputGesture="Ctrl+Y" />
                <Separator />
                <MenuItem Header="_Cut" Command="{Binding CutCommand}" InputGesture="Ctrl+X" />
                <MenuItem Header="_Copy" Command="{Binding CopyCommand}" InputGesture="Ctrl+C" />
                <MenuItem Header="_Paste" Command="{Binding PasteCommand}" InputGesture="Ctrl+V" />
                <Separator />
                <MenuItem Header="_Find" InputGesture="Ctrl+F" />
                <MenuItem Header="_Replace" InputGesture="Ctrl+H" />
            </MenuItem>
            <MenuItem Header="_View" Foreground="#CCCCCC">
                <MenuItem Header="_Command Palette..." InputGesture="Ctrl+Shift+P" />
                <MenuItem Header="_Explorer" InputGesture="Ctrl+Shift+E" />
                <MenuItem Header="_Search" InputGesture="Ctrl+Shift+F" />
                <Separator />
                <MenuItem Header="Toggle _Sidebar" Command="{Binding ToggleSidebarCommand}" InputGesture="Ctrl+B" />
                <MenuItem Header="Toggle _Bottom Panel" Command="{Binding ToggleBottomPanelCommand}" InputGesture="Ctrl+J" />
            </MenuItem>
            <MenuItem Header="_Help" Foreground="#CCCCCC">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>

        <!-- Main Content Area with Bottom Panel and Status Bar -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Main Content Area -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <!-- Activity Bar -->
                    <ColumnDefinition Width="48" />
                    <!-- Sidebar -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Main Content -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Activity Bar -->
                <Border Grid.Column="0" Background="#333333" BorderBrush="#464647" BorderThickness="0,0,1,0">
                    <ItemsControl ItemsSource="{Binding ActivityBarItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="48" Height="48">
                                    <!-- Selection indicator (left border) -->
                                    <Border Width="2" 
                                            Height="48" 
                                            Background="#007ACC" 
                                            HorizontalAlignment="Left"
                                            IsVisible="{Binding IsSelected}" />
                                    
                                    <!-- Button -->
                                    <Button Width="48" 
                                            Height="48"
                                            Padding="0"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            Command="{Binding $parent[Window].DataContext.SelectActivityBarItemCommand}"
                                            CommandParameter="{Binding Id}"
                                            ToolTip.Tip="{Binding Tooltip}">
                                        <Button.Styles>
                                            <Style Selector="Button">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                            <Style Selector="Button:pressed">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                        </Button.Styles>
                                        <icons:Icon Width="24" 
                                                   Height="24"
                                                   Value="{Binding IconPath}"
                                                   Foreground="{Binding IsSelected, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='#FFFFFF|#858585'}">
                                            <icons:Icon.Styles>
                                                <!-- White on hover -->
                                                <Style Selector="icons|Icon:pointerover">
                                                    <Setter Property="Foreground" Value="#FFFFFF" />
                                                </Style>
                                            </icons:Icon.Styles>
                                        </icons:Icon>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Sidebar -->
                <Border Grid.Column="1" 
                        Background="#252526" 
                        BorderBrush="#464647" 
                        BorderThickness="0,0,1,0"
                        Width="300"
                        IsVisible="{Binding IsSidebarVisible}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <!-- Sidebar Header -->
                        <Border Grid.Row="0" 
                                Background="#2D2D30" 
                                Height="35" 
                                BorderBrush="#464647" 
                                BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                          Text="{Binding SidebarTitle}" 
                                          Foreground="#CCCCCC" 
                                          FontSize="11" 
                                          FontWeight="Bold" 
                                          VerticalAlignment="Center" 
                                          Margin="12,0" />
                                
                                <Button Grid.Column="1" 
                                        Background="Transparent" 
                                        BorderThickness="0" 
                                        Width="24" 
                                        Height="24"
                                        Margin="4"
                                        Command="{Binding ToggleSidebarCommand}"
                                        ToolTip.Tip="Collapse Sidebar">
                                    <icons:Icon Value="fa-solid fa-times" 
                                               Width="12" 
                                               Height="12" 
                                               Foreground="#CCCCCC" />
                                </Button>
                            </Grid>
                        </Border>
                        
                        <!-- Sidebar Content -->
                        <ContentControl Grid.Row="1" Content="{Binding CurrentContent}" />
                    </Grid>
                </Border>

                <!-- Main Editor Area -->
                <Border Grid.Column="2" Background="#1E1E1E">
                    <ContentControl Content="{Binding DetailContent}" />
                </Border>
            </Grid>

            <!-- Bottom Panel -->
            <Grid Grid.Row="1" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{Binding BottomPanelGridLength}" />
                </Grid.RowDefinitions>

                <!-- Bottom Panel Header (Always Visible) -->
                <Border Grid.Row="0" 
                        Background="#2D2D30" 
                        Height="35" 
                        BorderBrush="#464647" 
                        BorderThickness="0,1,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Tab Control for Bottom Panel -->
                        <TabControl Grid.Column="0"
                                   ItemsSource="{Binding Tabs}" 
                                   SelectedItem="{Binding SelectedTab}"
                                   Background="Transparent" 
                                   BorderThickness="0"
                                   TabStripPlacement="Top">
                            <TabControl.Styles>
                                <Style Selector="TabControl">
                                    <Setter Property="Background" Value="Transparent" />
                                </Style>
                                <Style Selector="TabItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                </Style>
                                <Style Selector="TabItem:selected">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0,0,0,2" />
                                    <Setter Property="BorderBrush" Value="#007ACC" />
                                </Style>
                            </TabControl.Styles>
                            <TabControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" 
                                            BorderThickness="0" 
                                            Padding="0"
                                            Command="{Binding $parent[Window].DataContext.SelectBottomPanelTabCommand}"
                                            CommandParameter="{Binding}">
                                        <TextBlock Text="{Binding Header}" 
                                                  Foreground="#CCCCCC" 
                                                  FontSize="11" 
                                                  Margin="12,8,12,8" />
                                    </Button>
                                </DataTemplate>
                            </TabControl.ItemTemplate>
                            <TabControl.ContentTemplate>
                                <DataTemplate>
                                    <!-- Content will be shown in the main content area below -->
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                        
                        <!-- Collapse/Expand Button (Right Side) -->
                        <Button Grid.Column="1"
                                Command="{Binding ToggleBottomPanelCommand}" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Height="35"
                                Width="35"
                                Padding="0">
                            <icons:Icon Value="fa-solid fa-chevron-down" 
                                       Width="12" 
                                       Height="12" 
                                       Foreground="#CCCCCC" 
                                       VerticalAlignment="Center" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Bottom Panel Content -->
                <Border Grid.Row="1" 
                        Background="#1E1E1E">
                    <ScrollViewer>
                        <ContentControl Content="{Binding SelectedTab.Content}" />
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Status Bar (Full Width) -->
            <Border Grid.Row="2" Background="#007ACC" Height="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0">
                        <TextBlock Text="Ready" Foreground="White" VerticalAlignment="Center" FontSize="12" />
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0">
                        <TextBlock Text="S7Tools" Foreground="White" VerticalAlignment="Center" FontSize="12" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
