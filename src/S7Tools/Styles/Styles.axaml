<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="using:FluentAvalonia.UI.Controls">
    <Style Selector="ui|NavigationViewItem">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto, *">
                    <Border x:Name="AccentRectangle" Grid.Column="0" Width="3" HorizontalAlignment="Left" Background="#007ACC" IsVisible="False" />
                    <ContentPresenter Grid.Column="1"
                                      Name="PART_ContentPresenter"
                                      Background="{TemplateBinding Background}"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Content="{TemplateBinding Content}"
                                      Padding="{TemplateBinding Padding}"
                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="ui|NavigationViewItem:selected">
        <Setter Property="Foreground" Value="White" />
    </Style>
    <Style Selector="ui|NavigationViewItem:selected Border#AccentRectangle">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="ui|NavigationViewItem:pointerover">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="ui|NavigationView[PaneDisplayMode=LeftCompact] ui|NavigationViewItem">
        <Setter Property="Content" Value="" />
    </Style>

    <Style Selector="ui|NavigationView Grid#PaneContentGrid">
        <Setter Property="Background" Value="#2D2D2D" />
    </Style>

    <Style Selector="GridSplitter:hover">
        <Setter Property="Background" Value="#007ACC" />
    </Style>

    <Style Selector="GridSplitter:drag">
        <Setter Property="Background" Value="#007ACC" />
    </Style>

    <Style Selector="TabItem">
        <Setter Property="Foreground" Value="Gray" />
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Foreground" Value="White" />
    </Style>
</Styles>