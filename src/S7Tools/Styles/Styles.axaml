<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="using:FluentAvalonia.UI.Controls">
    <Style Selector="ui|NavigationViewItem">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>
    <Style Selector="ui|NavigationViewItem:selected">
        <Setter Property="Foreground" Value="White" />
    </Style>
    <Style Selector="ui|NavigationViewItem:selected Border#AccentRectangle">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="ui|NavigationViewItem:pointerover">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="ui|NavigationViewItem Image">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style Selector="ui|NavigationView Grid#PaneContentGrid">
        <Setter Property="Background" Value="#2D2D2D" />
    </Style>

    <Style Selector="GridSplitter:hover">
        <Setter Property="Background" Value="#007ACC" />
    </Style>

    <Style Selector="GridSplitter:drag">
        <Setter Property="Background" Value="#007ACC" />
    </Style>

    <Style Selector="TabItem">
        <Setter Property="Foreground" Value="Gray" />
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Foreground" Value="White" />
    </Style>
</Styles>